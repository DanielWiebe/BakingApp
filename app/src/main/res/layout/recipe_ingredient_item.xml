<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_recipe_detail_ingredient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brown Sugar"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />


    <TextView
        android:id="@+id/tv_recipe_detail_ingredient_quantity"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignTop="@id/tv_recipe_detail_ingredient_name"
        android:layout_alignBottom="@id/tv_recipe_detail_ingredient_name"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_toEndOf="@id/tv_recipe_detail_ingredient_name"
        android:gravity="center_vertical"

        android:text="40" />

    <TextView
        android:id="@+id/tv_recipe_detail_ingredient_item_measure"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignTop="@id/tv_recipe_detail_ingredient_name"
        android:layout_alignBottom="@id/tv_recipe_detail_ingredient_name"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_toEndOf="@id/tv_recipe_detail_ingredient_quantity"
        android:gravity="center_vertical"


        android:text="G" />

</RelativeLayout>
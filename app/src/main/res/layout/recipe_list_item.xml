<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_for_recipe"
        android:layout_margin="8dp">


        <TextView
            android:id="@+id/tv_recipe_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/_01" />

        <TextView
            android:id="@+id/tv_recipe_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_recipe_item_id"
            android:layout_margin="@dimen/text_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/apple_pie"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_recipe_item_servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/serves_8" />

        <TextView
            android:id="@+id/tv_recipe_item_stepCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_recipe_item_name"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/_12_steps"
            android:textAlignment="center" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>